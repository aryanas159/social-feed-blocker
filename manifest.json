{
  "manifest_version": 3,
  "name": "Social Feeds Blocker",
  "description": "YouTube, Facebook, Twitter, Instagram, LinkedIn and Reddit. Block your social media feeds and get back to work.",
  "version": "0.0.3",
  "permissions": ["storage"],
  "icons": {
    "16": "assets/icons/png/16x16.png",
    "48": "assets/icons/png/48x48.png",
    "128": "assets/icons/png/128x128.png"
  },
  "action": {
    "default_popup": "popup/index.html",
    "default_title": "Social Feed Blocker",
    "default_icon": {
      "16": "assets/icons/png/16x16.png",
      "48": "assets/icons/png/48x48.png",
      "128": "assets/icons/png/128x128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.facebook.com/*",
        "*://*.twitter.com/*",
        "*://*.instagram.com/*",
        "*://*.linkedin.com/*",
        "*://*.reddit.com/*",
        "*://*.youtube.com/*"
      ],
      "run_at": "document_start",

      "js": ["blocker.js"]
    }
  ]
}
